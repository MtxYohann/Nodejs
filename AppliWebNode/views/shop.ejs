  <body>
    <% if(products.length > 0) { %>
      <div>
        <% for(let product of products) { %>  
          <article class="box">
              <h2 class="text-center"><%= product.title %></h2>
              <div class="text-center">
                <img class="img" src="<%= product.image %>" alt="<%= product.title %>"></div>                    
              <div class="text-center">
                <div class="child"><p><%= product.price %>â‚¬</p></div>
                <div class="child"><button><span>Mettre au panier</span></button></div>
              </div>
            </article>
          
        <% } %>
      </div>
    <% } else { %>
        <h1>No Products Found</h1>
    <% } %>
  </body>
</html>
